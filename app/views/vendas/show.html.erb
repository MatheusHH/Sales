<%- model_class = Venda -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:pedido_id) %>:</strong></dt>
  <dd><%= @venda.pedido_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:produto_id) %>:</strong></dt>
  <dd><%= @venda.produto_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quantidade) %>:</strong></dt>
  <dd><%= @venda.quantidade %></dd>
  <dt><strong><%= model_class.human_attribute_name(:valortotal) %>:</strong></dt>
  <dd><%= number_to_currency(@venda.valortotal, unit: "R$", separator: ",", delimiter: ".") %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              vendas_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_venda_path(@venda), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              venda_path(@venda),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
