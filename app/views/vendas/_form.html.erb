<%= form_for @venda, :html => { :class => "form-horizontal venda" } do |f| %>

  <% if @venda.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@venda.errors.count, "error") %> prohibited this venda from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @venda.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :pedido_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-5">
      <%= f.collection_select(:pedido_id, Pedido.all, :id, :id, {prompt: "Selecione o pedido"}, {class: "form-control"})%>
    </div>
    <%=f.error_span(:pedido_id) %>
  </div>
  <div class="form-group">
    <%= f.label :produto_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-5">
      <%= f.collection_select(:produto_id, Produto.all, :id, :nome, {prompt: "Selecione o produto"}, {class: "form-control"})%>
    </div>
    <%=f.error_span(:produto_id) %>
  </div>

   <div class="form-group">
    <%= f.label :vendedor_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-5">
      <%= f.collection_select(:vendedor_id, Vendedor.all, :id, :nome, {prompt: "Selecione o vendedor"}, {class: "form-control"})%>
    </div>
    <%=f.error_span(:vendedor_id) %>
  </div>

  <div class="form-group">
    <%= f.label :quantidade, :class => 'control-label col-lg-2' %>
    <div class="col-lg-1">
      <%= f.text_field :quantidade, :class => 'form-control' %>
    </div>
    <%=f.error_span(:quantidade) %>
  </div>

  <div class="form-group">
    <%= f.label :modalidade_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.collection_select(:modalidade_id, Modalidade.all, :id, :nome, {prompt: "Selecione a Modalidade"}, {class: "form-control"})%>
    </div>
    <%=f.error_span(:modalidade_id) %>
  </div>

  <div class="form-group">
    <%= f.label :valortotal, :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.text_field :valortotal, :class => 'form-control', :disabled => true %>
    </div>
    <%=f.error_span(:valortotal) %>
  </div>

  <div class="form-group">
    <%= f.label :valortarifa, :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.text_field :valortarifa, :class => 'form-control', :disabled => true %>
    </div>
    <%=f.error_span(:valortarifa) %>
  </div>

  <div class="form-group">
    <%= f.label :valorcomissao, :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.text_field :valorcomissao, :class => 'form-control', :disabled => true %>
    </div>
    <%=f.error_span(:valorcomissao) %>
  </div>

  <div class="form-group">
    <%= f.label :valoreceber, :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.text_field :valoreceber, :class => 'form-control', :disabled => true %>
    </div>
    <%=f.error_span(:valoreceber) %>
  </div>


  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                vendas_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
