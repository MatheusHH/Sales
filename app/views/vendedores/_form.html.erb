<%= form_for @vendedor, :html => { :class => "form-horizontal vendedor" } do |f| %>

  <% if @vendedor.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@vendedor.errors.count, "error") %> prohibited this vendedor from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @vendedor.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nome, :class => 'control-label col-lg-2' %>
    <div class="col-lg-8">
      <%= f.text_field :nome, :class => 'form-control', :required => true %>
    </div>
    <%=f.error_span(:nome) %>
  </div>
  <div class="form-group">
    <%= f.label :telefone, :class => 'control-label col-lg-2' %>
    <div class="col-lg-5">
      <%= f.text_field :telefone, :class => 'form-control', :required => true %>
    </div>
    <%=f.error_span(:telefone) %>
  </div>
  <div class="form-group">
    <%= f.label :porcentagem, :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.text_field :porcentagem, :class => 'form-control', :required => true %>
    </div>
    <%=f.error_span(:porcentagem) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                vendedores_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
