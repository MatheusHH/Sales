<%= form_for @produto, :html => { :class => "form-horizontal produto" } do |f| %>

  <% if @produto.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@produto.errors.count, "error") %> prohibited this produto from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @produto.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nome, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nome, :class => 'form-control' %>
    </div>
    <%=f.error_span(:nome) %>
  </div>

  <div class="form-group">
    <%= f.label :categoria_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-5">
      <%= f.collection_select(:categoria_id, Categoria.all, :id, :nome, {prompt: "Selecione a categoria"}, {class: "form-control"})%>
    </div>
    <%=f.error_span(:categoria_id) %>
  </div>
  
  <div class="form-group">
    <%= f.label :descricao, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :descricao, :class => 'form-control' %>
    </div>
    <%=f.error_span(:descricao) %>
  </div>
  <div class="form-group">
    <%= f.label :precocompra, :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.text_field :precocompra, :class => 'form-control' %>
    </div>
    <%=f.error_span(:precocompra) %>
  </div>
  <div class="form-group">
    <%= f.label :precovenda, :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.text_field :precovenda, :class => 'form-control' %>
    </div>
    <%=f.error_span(:precovenda) %>
  </div>
  <div class="form-group">
    <%= f.label :estoque, :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.text_field :estoque, :class => 'form-control', :disabled => true %>
    </div>
    <%=f.error_span(:estoque) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                produtos_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
