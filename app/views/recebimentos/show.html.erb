<%- model_class = Recebimento -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:pedido_id) %>:</strong></dt>
  <dd><%= @recebimento.pedido_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vencimento) %>:</strong></dt>
  <dd><%= @recebimento.vencimento %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pagamento) %>:</strong></dt>
  <dd><%= @recebimento.pagamento %></dd>
  <dt><strong><%= model_class.human_attribute_name(:valor) %>:</strong></dt>
  <dd><%= number_to_currency(@recebimento.valor, unit: "R$", separator: ",", delimiter: ".") %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              recebimentos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_recebimento_path(@recebimento), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              recebimento_path(@recebimento),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
