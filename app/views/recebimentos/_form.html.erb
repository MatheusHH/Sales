<%= form_for @recebimento, :html => { :class => "form-horizontal recebimento" } do |f| %>

  <% if @recebimento.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@recebimento.errors.count, "error") %> prohibited this recebimento from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @recebimento.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :pedido_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.collection_select(:pedido_id, Pedido.all, :id, :id, {prompt: "Selecione o pedido"}, {class: "form-control"}) %>
    </div>
    <%=f.error_span(:pedido_id) %>
  </div>
  <div class="form-group">
    <%= f.label :vencimento, :class => 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.text_field :vencimento, placeholder: "yyyy-mm-dd", :class => 'form-control', :required => true %>
    </div>
    <%=f.error_span(:vencimento) %>
  </div>
  <div class="form-group">
    <%= f.label :pagamento, :class => 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.text_field :pagamento, placeholder: "yyyy-mm-dd", :class => 'form-control' %>
    </div>
    <%=f.error_span(:pagamento) %>
  </div>
  <div class="form-group">
    <%= f.label :valor, :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.text_field :valor, placeholder: "R$ ", :class => 'form-control', :required => true %>
    </div>
    <%=f.error_span(:valor) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                recebimentos_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>


<script type="text/javascript">
  $('#recebimento_vencimento').datepicker({format: 'yyyy-mm-dd', language: 'pt-BR'})
  $('#recebimento_pagamento').datepicker({format: 'yyyy-mm-dd', language: 'pt-BR'})  
</script>
